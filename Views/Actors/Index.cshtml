@model IEnumerable<Betterboxd.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}

<h1>Actors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Gender
            </th>
            <th>
                Age
            </th>
            <th>
                IMDB
            </th>
            <th>
                Photo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImdbUrl))
                    {
                        <a href="@item.ImdbUrl" target="_blank">IMDB</a>
                    }
                    else
                    {
                        <em>N/A</em>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.PhotoUrl))
                    {
                        <img src="@item.PhotoUrl" alt="@item.Name photo" width="100" style="border-radius:8px;" />
                    }
                    else
                    {
                        <em>No photo</em>
                    }
                </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Analytics</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
